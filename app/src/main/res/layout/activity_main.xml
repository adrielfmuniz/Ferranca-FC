<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.zinzorcsgapp.ferrancafc.MainActivity"
    android:background="@color/dim_foreground_material_dark"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jogadores"
            android:id="@+id/button"
            android:textStyle="bold"
            android:textColor="#000000"
            android:onClick="jogadores"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/escala_o"
            android:id="@+id/button2"
            android:textStyle="bold"
            android:textColor="#000000"
            android:onClick="escalacao"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/estat_stica"
            android:id="@+id/button3"
            android:textColor="#000000"
            android:textStyle="bold"
            android:onClick="estatistica"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <WebView
        android:layout_width="match_parent"
        android:id="@+id/webView1"
        android:onClick="webView1"
        android:background="#ffffff"
        android:layout_height="match_parent">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:id="@+id/progressBar1"
            android:background="@color/dim_foreground_material_dark"
            android:visibility="visible"
            android:layout_x="140dp"
            android:layout_y="197dp"
            android:layout_height="wrap_content" />

    </WebView>

</LinearLayout>
